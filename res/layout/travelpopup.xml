<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90AD87"
    android:orientation="horizontal"
    android:padding="10dp" >

    <TextView
        android:id="@+id/startLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:text="Start New Travel" 
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>
    
    <TextView
        android:id="@+id/startTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:editable="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/startLabel"
        android:text="HH:MM:SS pm" 
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>
    
    <Button
        android:id="@+id/getTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startTime"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Get Current Time" />
    
    
    <TextView
        android:id="@+id/typeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getTime"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:text="Type: " />
    <Spinner
      android:id="@+id/type"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content" 
      android:layout_marginTop="10dp"
      android:layout_toRightOf="@+id/typeLabel"
      android:layout_below="@+id/getTime"
  	/>
    
    <TextView
        android:id="@+id/fareLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/typeLabel"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textSize="20dp"
        android:text="Fare: " />
    <EditText
        android:id="@+id/fare"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:inputType="number"
        android:layout_toRightOf="@+id/fareLabel"
        android:layout_below="@+id/type">
    </EditText>
    
    <Button
        android:id="@+id/closePopup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fare"
        android:gravity="center"
        android:text="Proceed"/>
</RelativeLayout>